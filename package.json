{
  "name": "root",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "front",
    "back",
    "shared"
  ],
  "scripts": {
    "start": "concurrently \"pnpm run back\" \"pnpm run front\"",
    "back": "pnpm --prefix back run nodemon",
    "front": "pnpm --prefix front dev",
    "test": "concurrently \"pnpm run test-front\" \"pnpm run test-back\"",
    "test-front": "pnpm --prefix front test",
    "test-back": "pnpm --prefix back test",
    "build": "pnpm run build-shared && concurrently \"pnpm run build-front\" \"pnpm run build-back\"",
    "build-front": "pnpm --prefix front build",
    "build-back": "pnpm --prefix back build",
    "build-shared": "pnpm --prefix shared build",
    "clean": "concurrently \"pnpm run clean-front\" \"pnpm run clean-back\" \"pnpm run clean-shared\"",
    "clean-front": "pnpm --prefix front clean",
    "clean-back": "pnpm --prefix back clean",
    "clean-shared": "pnpm --prefix shared clean",
    "typecheck": "concurrently \"pnpm run typecheck-front\" \"pnpm run typecheck-back\"",
    "typecheck-front": "pnpm --prefix front typecheck",
    "typecheck-back": "pnpm --prefix back typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@solana/web3.js": "^2.0.0",
    "express": "^4.19.2",
    "zod": "^3.24.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2"
  }
}
