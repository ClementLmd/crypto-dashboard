{
  "name": "root",
  "version": "1.0.0",
  "workspaces": [
    "front",
    "back",
    "shared"
  ],
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "dev": "turbo run dev",
    "start": "pnpm run back & pnpm run front",
    "back": "pnpm --prefix back run nodemon",
    "front": "pnpm --prefix front dev",
    "test": "turbo run test",
    "test-front": "pnpm --prefix front test",
    "test-back": "pnpm --prefix back test",
    "build": "turbo run build",
    "build-front": "pnpm --prefix front build",
    "build-back": "pnpm --prefix back build",
    "build-shared": "pnpm --prefix shared build",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo run lint",
    "prepare": "husky",
    "prebuild": "turbo run build --filter=shared"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@solana/web3.js": "^2.0.0",
    "express": "^4.19.2",
    "zod": "^3.24.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "turbo": "^2.3.4"
  }
}
