{
  "version": 2,
  "buildCommand": "pnpm run build:shared && pnpm run build",
  "builds": [
    {
      "src": "dist/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "../shared/dist/**",
          "../shared/package.json",
          "../pnpm-workspace.yaml",
          "../package.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
