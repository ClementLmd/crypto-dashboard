{
  "version": 2,
  "buildCommand": "cd shared && pnpm run build && cd .. && pnpm run build",
  "builds": [
    {
      "src": "src/app.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "../shared/src/**",
          "../shared/package.json",
          "../pnpm-workspace.yaml",
          "../package.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/app.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
