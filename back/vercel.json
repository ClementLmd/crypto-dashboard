{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "turbo run build",
  "builds": [
    {
      "src": "dist/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "../shared/dist/**",
          "../shared/package.json",
          "../pnpm-workspace.yaml",
          "../package.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CONNECTION_STRING": "@connection-string",
    "CONNECTION_STRING_TEST": "@connection-string-test"
  }
}
