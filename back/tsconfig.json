{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "paths": {
      "crypto-dashboard-shared": ["../shared/src"]
    },
    "typeRoots": ["./node_modules/@types", "../node_modules/@types", "./src/types"],
    "types": ["express", "node", "jest"]
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts", "../shared/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "references": [{ "path": "../shared" }]
}
