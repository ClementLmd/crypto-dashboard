{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "shared": ["../shared/src/index.ts"]
    },
    "typeRoots": ["api/types", "./node_modules/@types"]
  },
  "include": ["api/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
