{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "paths": {
      "crypto-dashboard-shared": ["../shared/src"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["express", "node", "jest"]
  },
  "include": ["src/**/*.ts", "../shared/**/*"],
  "exclude": ["node_modules"]
}
