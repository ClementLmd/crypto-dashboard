{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "paths": {
      "@crypto-dashboard-shared": ["../shared/src/index.ts"]
    },
    "types": ["express", "node", "jest"]
  },
  "include": ["src/**/*.ts", "../shared/dist/**/*"],
  "exclude": ["node_modules"]
}
