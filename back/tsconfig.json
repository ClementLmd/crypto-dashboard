{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "crypto-dashboard-shared": ["../shared/src/index.ts"]
    }
  },
  "include": ["src/**/*", "src/@types/**/*.d.ts", "../shared/src/**/*"],
  "exclude": ["node_modules"]
}
