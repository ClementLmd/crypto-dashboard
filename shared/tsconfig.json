{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["esNext"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  }
}
