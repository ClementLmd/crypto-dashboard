{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["esNext"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
